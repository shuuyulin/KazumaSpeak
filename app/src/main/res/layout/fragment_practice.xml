<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Practice Mode"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Flashcard (CLICKABLE for flip) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/flashcard"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Front Side Content -->
            <LinearLayout
                android:id="@+id/card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Audio Button (when audio display is enabled) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_play_audio"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/blue_primary"
                    android:visibility="gone"
                    app:icon="@drawable/ic_play"
                    app:iconTint="@color/white" />

                <!-- Japanese Text -->
                <TextView
                    android:id="@+id/japanese_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="今日は良い天気ですね"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <!-- Kana Text -->
                <TextView
                    android:id="@+id/kana_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="きょうはいいてんきですね"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <!-- Romaji Text -->
                <TextView
                    android:id="@+id/romaji_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="kyou wa ii tenki desu ne"
                    android:textColor="@color/text_secondary"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <!-- Input field for reverse translation -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Enter your translation"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_translation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Back Side Content -->
            <LinearLayout
                android:id="@+id/card_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- English Translation -->
                <TextView
                    android:id="@+id/english_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="Today is nice weather, isn't it?"
                    android:textColor="@color/blue_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- User Answer (for reverse translation) -->
                <TextView
                    android:id="@+id/user_answer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Your answer:"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_answer_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:textColor="@color/orange_primary"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Display Options -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/display_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashcard"
        app:singleLine="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_japanese"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:checked="true"
            android:text="Japanese"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/blue_primary"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_kana"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:text="Kana"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/blue_primary"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_romaji"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:text="Romaji"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/blue_primary"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_audio"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:checked="true"
            android:text="Audio"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/blue_primary"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_auto_play"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:text="Auto Play"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/blue_primary"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Mode Selection -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/mode_selection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_options"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_flashcard_mode"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:checked="true"
            android:text="Flashcard"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/green_primary"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_reverse_translation"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checkable="true"
            android:text="Reverse Translation"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_selector"
            app:chipStrokeColor="@color/green_primary"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Record Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_record"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/red_primary"
            android:src="@drawable/ic_record"
            app:tint="@color/white"
            app:fabSize="normal" />

        <!-- Check Answer Button (for reverse translation) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_answer"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/orange_primary"
            android:text="Check Answer"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="28dp" />

        <!-- Next Button (White button renamed and repositioned) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/background_secondary"
            android:src="@drawable/ic_skip"
            app:tint="@color/text_secondary"
            app:fabSize="normal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/japanese_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="こんにちは"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/english_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Hello"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/score_card"
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/green_light"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/score_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/circle_green"
                        android:backgroundTint="@color/green_primary" />

                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textColor="@color/green_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_play_original"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/background_secondary"
                android:text="Original"
                android:textColor="@color/blue_primary"
                android:textSize="13sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_play"
                app:iconSize="16dp"
                app:iconTint="@color/blue_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_play_recording"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/background_secondary"
                android:text="Recording"
                android:textColor="@color/red_primary"
                android:textSize="13sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_play"
                app:iconSize="16dp"
                app:iconTint="@color/red_primary" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="2m ago"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>